{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "YouTube-Floater",
  "colors": {
    "primary": "#FF0000",
    "light": "#FF4444",
    "dark": "#CC0000"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Download",
          "href": "https://youtubefloater.com",
          "icon": "download"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/jimbrend/YouTube-Floater",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
